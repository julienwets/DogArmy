{% extends 'account/index.html.twig' %}

{% block title %}User
{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Picture</th>
                <td>
                    {# {% if user.imageName %} #}
                        <img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="{{ user.email }}"/>
                    {# {% endif %} #}
                </td>

            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>HomeType</th>
                <td>
                    <input type="checkbox" name="maison" {% if user.homeType[0] is defined %} checked {% endif %}>
                    <label for="maison">Maison</label>
                    <input type="checkbox" name="appart" {% if user.homeType[1] is defined %} checked {% endif %}>
                    <label for="appart">Appartement</label>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
