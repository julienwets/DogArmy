{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset("css/style.css") }}">
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
<div class="main-content">
    <section class="min-vh-100 d-flex align-items-center">
        <div class="bg-img-holder top-0 right-0 col-lg-6 col-xl-8 zindex-100 d-none d-lg-block" data-bg-position="center" data-bg-size="cover">
            <img alt="Dog Army" src="{{ asset('img/cover-photo.jpg') }}">
        </div>
        <div class="container-fluid">
            <div class="row align-items-center mb-5">
                <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0 text-center">
                    <a href="/">
                        <img src="{{ asset('img/logo.png') }}" alt="Logo Dog Army">
                    </a>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0">
                    <div class="px-4 px-lg-6">
                        <div>
                            <div class="mb-5 text-center">
                                <h6 class="h3">Connexion</h6>
                                <p class="text-muted mb-0">Vous devez être connecté pour continuer.</p>
                                {% if error %}
                                <div class="text-danger px-1" style="font-size:12px;"><i class="fas fa-times mr-2"></i>{{ error }}</div>
                                {% endif %}
                            </div>
                            <span class="clearfix"></span>
                            <form method="POST" role="form" name="loginForm">
                                <div class="form-group">
                                    <label class="form-control-label">Adresse e-mail</label>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" id="input-email" name="email" placeholder="nom@exemple.com" value="{{ last_username }}" type="email" tabindex="1">
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <div class="d-flex align-items-center justify-content-between">

                                        <div>
                                            <label class="form-control-label">Mot de passe</label>
                                        </div>
                                        <div class="mb-2">
                                            <a class="small text-muted" href="#!" tabindex="5">Mot de passe oublié ?</a>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-key"></i>
                                            </span>
                                        </div>
                                        <input class="form-control" id="input-password" name="password" placeholder="Mot de passe" type="password" tabindex="2">
                                        <div class="input-group-append">
                                            <span class="input-group-text" onclick="showPassword()">
                                                <i class="fa fa-eye" id="show-password"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <input class="btn btn-block btn-primary" type="submit" value="Connexion" tabindex="3"></div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </form>
                            <div class="mt-4 text-center">
                                <small>Pas encore inscrit ?</small>
                                <a class="small font-weight-bold" href="/register" tabindex="4">Inscription</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

