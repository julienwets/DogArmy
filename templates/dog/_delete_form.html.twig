<form method="post" action="{{ path('dog_delete', {'id': dog.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer ce chien de votre compte ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dog.id) }}">
    <button class="btn px-0">Supprimer</button>
</form>
