{% extends 'base.html.twig' %}
{% form_theme registrationForm 'form/form_errors.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block header %}{% endblock %}

{% block body %}
<div class="main-content">
    <section class="min-vh-100 d-flex align-items-center">
        <div class="bg-img-holder top-0 right-0 col-lg-6 col-xl-8 zindex-100 d-none d-lg-block" data-bg-size="cover" data-bg-position="center">
            <img alt="Logo Dog Army" src="{{ asset('img/cover-photo.jpg') }}">
        </div>
        <div class="container-fluid py-5">
            <div class="row align-items-center mb-5">
                <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0 text-center">
                    <a href="/">
                        <img src="{{ asset('img/logo.png') }}" alt="Logo Dog Army">
                    </a>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0">
                    <div class="px-4 px-lg-6">
                        <div>
                            <div class="mb-5 text-center">
                                <h6 class="h3">Inscription</h6>
                                <p class="text-muted mb-0">Rejoignez notre communauté !</p>
                            </div>
                            <span class="clearfix"></span>
                            {# {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword) }}
                            <button class="btn btn-primary btn-block">Register</button>
                            {{ form_end(registrationForm) }} #}
                            <form role="form" method="POST">
                                <div class="form-group">
                                    <label class="form-control-label">Adresse e-mail</label>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="email" name="registration_form[email]" class=" form-control" id="input-email" placeholder="nom@exemple.com">
                                    </div>
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Code postal</label>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        </div>
                                        <input type="text" name="registration_form[zipCode]" class=" form-control" id="input-zipCode" placeholder="1970">
                                    </div>
                                    {{ form_errors(registrationForm.zipCode) }}
                                </div>
                                <div class="form-group mb-4">
                                    <label class="form-control-label">Mot de passe</label>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input type="password" name="registration_form[plainPassword][first]" class="form-control" id="input-password" placeholder="Mot de passe" required>
                                        <div class="input-group-append">
                                            <span class="input-group-text" onclick="showPassword()">
                                                <i class="fas fa-eye"></i>
                                            </span>
                                        </div>
                                    </div>
                                    {{ form_errors(registrationForm.plainPassword.first) }}
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Confirmation du mot de passe</label>
                                    <div class="input-group input-group-merge">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input type="password" name="registration_form[plainPassword][second]" class=" form-control" id="input-password-confirm" placeholder="Confirmation du mot de passe">
                                    </div>
                                    {{ form_errors(registrationForm.plainPassword.second) }}
                                </div>
                                <div class="my-4">
                                    <div class="custom-control custom-checkbox mb-3">
                                        <input type="checkbox" name="registration_form[agreeTerms]" class="custom-control-input" id="check-terms">
                                        <label class="custom-control-label" for="check-terms">J'accepte les <a href="#">conditions d'utilisation</a></label>
                                        {{ form_errors(registrationForm.agreeTerms) }}
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="registration_form[agreePrivacy]" class="custom-control-input" id="check-privacy">
                                        <label class="custom-control-label" for="check-privacy">J'accepte la <a href="#">politique de confidentialité</a></label>
                                        {{ form_errors(registrationForm.agreePrivacy) }}
                                    </div>
                                </div>
                                <div class="mt-4">
                                    {{ form_row(registrationForm._token) }}
                                    <input type="submit" value="Créer mon compte" class=" btn btn-block btn-primary">
                                </div>
                            </form>
                            <div class="mt-4 text-center"><small>Vous avez déja un compte ?</small>
                                <a href="/login" class="small font-weight-bold">Connexion</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

